		<script>
			var psubtotal=document.getElementsByClassName("p-subtotal");
			var suma=0;
			for (var i=0; i<psubtotal.length; i++){
				suma += parseFloat(psubtotal[i].textContent)  ;
			}
			
			total=suma
			document.getElementById("p-total").innerHTML=total.toFixed(2);

			async function seleccionaCarrito(codigo){
				try {
					Swal.fire({
						title: '¿Esta seguro de eliminar este Producto?',
						icon: 'warning',
						showCancelButton: true,
						confirmButtonText: 'Si',
						cancelButtonText: "No",
						confirmButtonColor: '#3085d6',
						cancelButtonColor: '#d33',
						}).then((result) => {
							if (result.value) {

								eliminar(codigo);
								window.location.href="/carrito";

							}else if(result.value==undefined){
								return false;
							}
						return false;
					})
  
				} catch (error) {
					console.log("eliminar" + error);
				}
			}

			async function eliminar(codigo){
			
				try {
					const data= await fetch(`/${codigo}`,{method:'delete'});//enviamos la solicitud con fetch
					const res =await data.json();
					if(!res.estado){
					return false;
					}
				} catch (error) {
					console.log("error eliminar front " +error);
				}
				
      		}

			

		async function modificarCantidad(cod,precio){
				var selectCantidad=document.getElementById(`selectmenor${cod}`);
				var codigo=selectCantidad.dataset.id;
				var cantidad=parseInt(selectCantidad.value);
				var restar=true;
				try {
					const data= await fetch(`/${codigo}`,{
						method: 'PUT',
						headers: {
						'Content-Type': 'application/json'
						},
						body: JSON.stringify({codigo,cantidad,precio,restar})
                })
						const res=await data.json();
						if(res.estado){
							Swal.fire({
							title: 'Cantidad modificada',
							icon: 'success',
							showCancelButton: false,
							confirmButtonText: 'OK',
							confirmButtonColor: '#3085d6',
							}).then((result) => {
								if (result.value) {

									window.location.href=`/carrito`;

